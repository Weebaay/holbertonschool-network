#!/usr/bin/env bash
# This script configures localhost and facebook.com resolutions in /etc/hosts

# Check if the script is run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup the /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Add or modify entries in /etc/hosts
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "Configuration updated. A backup of /etc/hosts has been saved as /etc/hosts.bak"
